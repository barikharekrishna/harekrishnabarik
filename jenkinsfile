pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
            securityContext:
              runAsUser: 0
            volumeMounts:
             - name: dockersock
               mountPath: /var/run/docker.sock
          volumes:
          - name: dockersock
            hostPath:
               path: /var/run/docker.sock
        '''
    }
  }
  stages {
    stage('build') {
      steps {
        container('docker') {
          sh 'echo "TEST"'
          sh 'docker build -t.'
        }
      }
    }
  }
}
