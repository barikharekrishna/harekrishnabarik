pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
spec:
  nodeSelector:
    test: windows1
  tolerations:
  - key: "node.kubernetes.io/os"
    operator: "Equal"
    value: "windows"
    effect: "NoSchedule"
  containers:
  - name: docker
    image: mcr.microsoft.com/windows/nanoserver:ltsc2022
    command:
    - cat
    tty: true
    securityContext:
      runAsUser: 0
    volumeMounts:
    - name: dockersock
      mountPath: /var/run/docker.sock    
  volumes:
  - name: dockersock
    hostPath:
      path: /var/run/docker.sock
'''
        }
    }
    stages {
    stage('build') {
      steps {
        container('docker') {
          sh 'docker --version'
          sh 'docker build -t windows .'
        }
      }
    }
  }
}
