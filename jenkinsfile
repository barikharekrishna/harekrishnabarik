pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: docker
    image: docker:latest
    command:
    - cat
    tty: true
  - name: shell
    image: mcr.microsoft.com/dotnet/framework/aspnet:4.8-windowsservercore-ltsc2019
    command:
    - cat
    tty: true
  nodeSelector:
    node.kubernetes.io/os: windows
  tolerations:
  - key: "node.kubernetes.io/os"
    value: "windows"
    effect: "NoSchedule"  
'''
        }
    }
    stages {
    stage('build') {
      steps {
        container('docker') {
          sh 'docker --version'
          sh 'docker build -t windows .'
        }
      }
    }
  }
}
